@model HealthSpot.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<div class="panel">
    <div class="panel panel-heading">
        Login
    </div>
    <div class="panel panel-body">
        @using (Html.BeginForm("EmployeeLogin", "Employee", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group row">
                <div class="col-lg-4">
                    <label for="Id">Employee ID</label>
                    @Html.EditorFor(m => m.Id, additionalViewData: new { htmlAttributes = new { @name = "Id",  @class = "form-control", @placeholder = "Enter your Employee ID" }})
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-4">
                    <label for="Password">Password</label>
                    @Html.EditorFor(m => m.Password, additionalViewData: new { htmlAttributes = new { @name = "UserCredentials.Password", @class = "form-control", @type = "password", @placeholder = "Enter your password" } })
                </div>
            </div>
            <div class="form-group-row">
                    <button type="submit" class="btn btn-primary">Login</button>
            </div>
        }
    </div>
</div>

